@model Animal

<form method="post" action="">
    <div class="cadastra-form">
        <div class="mb-3">
            <input asp-for="Nome" placeholder="Nome" type="text" class="form-control">
        </div>
        <div class="mb-3">
            <input asp-for="Responsavel" placeholder="Responsável" type="text" class="form-control">
        </div>
        <div class="mb-3">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault">
                <label class="form-check-label" for="">
                    Cachorro
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault">
                <label class="form-check-label" for="">
                    Gato
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault">
                <label class="form-check-label" for="">
                    Macaco
                </label>
            </div>
        </div>
        <div class="mb-3">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault">
                <label class="form-check-label" for="">
                    Macho
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault">
                <label class="form-check-label" for="">
                    Fêmea
                </label>
            </div>
        </div>
        <div class="mb-3">
            <input asp-for="Peso" placeholder="Peso" type="number" class="form-control">
        </div>
        <div class="mb-3">
            <input asp-for="Altura" placeholder="Altura" type="number" class="form-control">
        </div>
        <div class="mb-3">
            <input asp-for="Cor" placeholder="Cor" type="text" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary">Enviar</button>
    </div>

</form>