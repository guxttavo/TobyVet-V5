@model IEnumerable<Animal>

@{
  Layout = null;
}

<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nome</th>
      <th scope="col">Responsável</th>
      <th scope="col">Espécie</th>
      <th scope="col">Sexo</th>
      <th scope="col">Peso</th>
      <th scope="col">Altura</th>
      <th scope="col">Cor</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <th scope="row">@item.Id</th>
        <td>@item.Nome</td>
        <td>@item.Responsavel</td>
        <td>@item.Especie.Nome</td>
        <td>@item.Sexo</td>
        <td>@item.Peso</td>
        <td>@item.Altura</td>
        <td>@item.Cor</td>
        <td>
          <button type="button" class="btn btn-sm btn-primary" onclick="animal.mostrarViewEditar(@item.Id)">
            Editar
          </button>
          <button type="button" class="btn btn-sm btn-danger">
            Excluir
          </button>
      </tr>
    }
  </tbody>
</table>